= form_for event do |f|
  = f.input :title
  = f.input :url
  = f.input :starts_at, :as => :datetime
  = f.input :location
  = f.input :description, :as => :textarea
  - if can? :manage, Event
    = f.input :verified, :as => :checkbox
  = f.submit event.new_record? ? "Veranstaltung eintragen" : "Veranstaltung aktualisieren"
